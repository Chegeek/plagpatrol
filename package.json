{
  "name": "plagpatrol",
  "version": "0.0.1",
  "description": "An app for detecting documents tampered to bypass plagiarism detectors",
  "author": "Jos√© Miguel Moreno <josemmo@pm.me>",
  "repository": "https://github.com/josemmo/plagpatrol",
  "license": "MIT",
  "main": "src/main/index.js",
  "scripts": {
    "build": "npm run build:web && npm run build:desktop",
    "build:web": "webpack --mode=production",
    "build:desktop": "electron-builder",
    "start": "npm run start:desktop",
    "start:web": "webpack-dev-server --mode=development",
    "start:desktop": "npm run build:web && electron ."
  },
  "build": {
    "productName": "plagpatrol",
    "appId": "tk.josemmo.plagpatrol",
    "artifactName": "${productName}-setup-${version}.${ext}",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist",
      "src/main",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "icon": "build/icons",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  },
  "devDependencies": {
    "base64-inline-loader": "^1.1.1",
    "css-loader": "^1.0.0",
    "electron": "^3.0.4",
    "electron-builder": "^20.28.4",
    "html-webpack-plugin": "^3.2.0",
    "jquery": "^3.3.1",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.9.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "pdfjs-dist": "^2.0.489",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "dependencies": {
    "electron-updater": "^3.1.2"
  }
}
